<Page
    x:Class="SpyglassApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpyglassApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FF00AEFF">

    <NavigationView ItemInvoked="NavView_ItemInvoked">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Trip Data" Tag="TripData" x:Name="A" Icon="World" FontSize="20" FontWeight="Bold" Height="130"/>
            <NavigationViewItem Content="Drop Data" Tag="DropData" x:Name="B" Icon="Download" FontSize="20" FontWeight="Bold" Height="130"/>
            <NavigationViewItem Content="Species Data" Tag="SpeciesData" x:Name="C" Icon="Edit" FontSize="20" FontWeight="Bold" Height="130"/>
        </NavigationView.MenuItems>
        <Frame x:Name="MainFrame" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="550" Width="550">
            <Image HorizontalAlignment="Left" Height="400" Margin="150,150,0,0" VerticalAlignment="Top" Width="400" Source="Assets/spyglass_logo.png"/>
        </Frame>
    </NavigationView>
</Page>
